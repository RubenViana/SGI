<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf> 

	<!-- Credits of the original file go to Group 1, class 1 of course LAIG school year 2013/2014, FEUP, University of Porto -->
	
    <globals background="0 0 0 1" ambient="0 0 0 1" /> 

    <fog color="1.0 1.0 1.0 1.0" near="0.0" far="100.0" />

    <cameras initial="cam1" > 
        <perspective id="cam1" 
            angle="60" 
            near="0.1" 
            far="1000" 
            location="15 15 15" 
            target="0 0.0 0" /> 
    </cameras> 

    <!-- bloco de texturas. Este bloco tem de existir mas pode estar vazio, se nao forem usadas texturas --> 
    <textures>        
        <texture id="wallTex" filepath="scenes/T02G02/textures/wall.jpeg" />
		<texture id="floorTex" filepath="scenes/T02G02/textures/woodFloorTexture.jpg" />
        <texture id="tableTopTex" filepath="scenes/T02G02/textures/tableTop.png" />
        <texture id="netTex" filepath="scenes/T02G02/textures/net.png" />
        <texture id="tableTex" filepath="scenes/T02G02/textures/table.jpg" />
    </textures> 

    <materials> 

        <material id="tableApp"
            emissive="0 0 0 1"
            color="0.8 0.8 0.8 1"
            specular="0 0 0 0"
            shininess="0"
            textureref="tableTex" 
            texlength_s="1" 
            texlength_t="1" 
            twosided = "false" />
			
		<material id="wallApp" 
            emissive="0.0 0.0 0.0 1" 
			color="0.8 0.8 0.8 1.0" 
            specular="0 0 0 0" 
            shininess="10" 
            textureref="wallTex" 
            texlength_s="1" 
            texlength_t="1" 
            twosided = "false" />
		
		
		<material id="floorApp" 
            emissive="0.0 0.0 0.0 1" 
            color="0.8 0.8 0.8 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="floorTex" 
            texlength_s="5" 
            texlength_t="5" 
            twosided = "true" />
		
		<material id="netApp"
            emissive="0.0 0.0 0.0 1"
            color="0.8 0.8 0.8 1.0"
            specular="0 0 0 0"
            shininess="0"
            textureref="netTex"
            texlength_s="1"
            texlength_t="4"
            twosided = "true" />

        <material id="tableTopApp"
            emissive="0 0 0 1"
            color="0.8 0.8 0.8 1"
            specular="0 0 0 0"
            shininess="0"
            textureref="tableTopTex" 
            texlength_s="1" 
            texlength_t="1" 
            twosided = "false" />

			
		
			
    </materials> 

    <graph rootid="scene"> 
		
		<node id="scene"> 
            <children> 
                <noderef id="wall" /> 
				<noderef id="floor" /> 
				<noderef id="table" /> 

                <!-- <pointlight id="light1" enabled="true" 
                    color="0.5 0.6 0.8 1" 
                    intensity="1.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="33.75 37.3 33.75" 
                /> 

                <pointlight id="light2" enabled="true" 
                    color="0.5 0.6 0.8 1" 
                    intensity="1.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="11.25 7.3 3.75"
                /> 
                
                <pointlight id="light3" enabled="true" 
                    color="0.5 0.6 0.8 1" 
                    intensity="1.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="11.25 7.3 3.75"  
                /> 
			              
                <spotlight id="light4" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="1.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="true"
                    position="2 2 4" 
                    target="0 0 0"
                    penumbra="1.0"
                    angle="10.0" 
                />  -->

                <directionallight id="light5" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="1.0"
                    castshadow="true"
                    position="-20 20 0"
                /> 

                <directionallight id="light6" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="1.0"
                    castshadow="true"
                    position="20 20 0"
                /> 

                <directionallight id="light7" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="1.0"
                    castshadow="true"
                    position="0 20 -20"
                />

                <directionallight id="light8" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="1.0"
                    castshadow="true"
                    position="0 20 20"
                />

            </children> 
        </node>
		
		<node id="rectangle1"> 

            <transforms>
				<translate value3="0 0 -0.5" />
				<rotate value3="0 180.0 0.0" />
            </transforms> 

            <children>   
                <primitive>          
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive> 
            </children> 
        </node>
		
		<node id="rectangle2"> 

            <transforms>
				<translate value3="0 0 0.5" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle3"> 

            <transforms>
				<translate value3="0 -0.5 0" />
				<rotate value3="90 0.0 0.0" />
            </transforms> 

            <children>   
                <primitive>          
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle4"> 

            <transforms>
				<translate value3="0 0.5 0" />
				<rotate value3="-90 0.0 0.0" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle5"> 

            <transforms>
				<translate value3="-0.5 0 0" />
				<rotate value3="0.0 -90.0 0.0" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle6"> 
            <transforms>
				<translate value3="0.5 0 0" />
				<rotate value3="0.0 90.0 0.0" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="unitCube">
            <children>            
				<!-- Back -->
                <noderef id="rectangle1" /> 
				<!-- Front -->
				<noderef id="rectangle2" /> 
				<!-- Bottom -->
				<noderef id="rectangle3" />
				<!-- Top -->
				<noderef id="rectangle4" />
				<!-- Left -->				
				<noderef id="rectangle5" />
				 <!-- Right -->
				<noderef id="rectangle6" />
            </children> 
        </node>
		
		<node id="leg">
            <transforms>
				<scale value3="0.25 0.2 0.25" />
            </transforms> 
            <children>             
                <primitive>
                    <cylinder base="0.2" top="0.2" height="3" slices="32" stacks="32" />
                </primitive>
            </children> 
        </node>
		
		<node id="leg1">
			<transforms>
				<translate value3="1.8 0.3 0.8" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 
        </node>
		
		<node id="leg2">
			<transforms>
				<translate value3="-1.8 0.3 0.8" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 
        </node>
		
		<node id="leg3">
			<transforms>
				<translate value3="-1.8 0.3 -0.8" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 
        </node>
		
		<node id="leg4">
			<transforms>
				<translate value3="1.8 0.3 -0.8" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 
        </node>

        <node id="post1">
			<transforms>
                <scale value3="0.4 0.3 0.4" />
				<translate value3="0 0.1 -0.95" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 
        </node>

        <node id="post2">
			<transforms>
                <scale value3="0.4 0.3 0.4" />
				<translate value3="0 0.1 0.95" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 
        </node>
		
		<node id="tableTop">
			<transforms>
				<scale value3="4 0.1 2" />
                <translate value3="0 0.65 0" />
            </transforms> 

            <children>             
                <noderef id="unitCube" />
            </children> 
        </node>

        <node id="tableTopT">
			<transforms>
				<scale value3="4 0.01 2" />
                <translate value3="0 0.705 0" />
            </transforms> 

            <materialref id="tableTopApp" />

            <children>             
                <noderef id="unitCube" />
            </children> 
        </node>

        <node id="netT">
			<transforms>
				<scale value3="1.9 0.12 1" />
                <rotate value3="0 90 0" />
                <translate value3="0 0.12 0" />
            </transforms> 

            <materialref id="netApp" />

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>

        <node id="net">
            <transforms>
                <translate value3="0 0.705 0" />
            </transforms>

            <materialref id="tableApp" />

            <children>
                <noderef id="post1" />
                <noderef id="post2" />
                <noderef id="netT" />
            </children>
        </node>
		
		<node id="table">
			

			<materialref id="tableApp" />
			
            <children>             
                <noderef id="tableTop" />
				<noderef id="leg1" />
				<noderef id="leg2" />
				<noderef id="leg3" />
				<noderef id="leg4" />
                <noderef id="tableTopT" /> 
                <noderef id="net" />
            </children> 
        </node>
		
		<node id="floor">
			<transforms>
				<translate value3="0 0 0" />
				<rotate value3="-90 0.0 0.0" />
            </transforms> 

			<materialref id="floorApp" />
			
            <children>             
                <primitive>
                    <rectangle xy1="-5 -5" xy2="5 5" />
                </primitive>
            </children> 
        </node>

        <node id="wall1">
            <transforms>
				<translate value3="0 5 0" />
				<rotate value3="90.0 0.0 0.0" />
            </transforms> 
            <children>             
                <primitive>
                    <rectangle xy1="-5 0" xy2="5 3" />
                </primitive>
            </children> 
        </node>

        <node id="wall2">
            <transforms>
				<translate value3="0 -5 3" />
				<rotate value3="-90.0 0.0 0.0" />
            </transforms> 
            <children>             
                <primitive>
                    <rectangle xy1="-5 0" xy2="5 3" />
                </primitive>
            </children> 
        </node>

        <node id="wall3">
            <transforms>
				<translate value3="-5 0 0" />
				<rotate value3="90.0 90.0 0.0" />
            </transforms> 
            <children>             
                <primitive>
                    <rectangle xy1="-5 0" xy2="5 3" />
                </primitive>
            </children> 
        </node>

        <node id="wall4">
            <transforms>
				<translate value3="5 0 0" />
				<rotate value3="90.0 -90.0 0.0" />
            </transforms> 
            <children>             
                <primitive>
                    <rectangle xy1="-5 0" xy2="5 3" />
                </primitive>
            </children> 
        </node>
		
		<node id="wall">
			<transforms>
				<rotate value3="-90 0.0 0.0" />
            </transforms> 

            <materialref id="wallApp" />
			
            <children>             
                <noderef id="wall1" />
                <noderef id="wall2" />
                <noderef id="wall3" />
                <noderef id="wall4" />
            </children> 
        </node>
		
    </graph> 
</yaf>